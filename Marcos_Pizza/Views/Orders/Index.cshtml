@model IEnumerable<OrderVM>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>


<main> 
    @foreach (var item in Model) 
    {
                <div class="container ">
                    <div class="col-3">
                        <div class="card shadow-sm">
                            <div class="text-center">
                            <div class="card-body font= 1em ">
                                <h3>@item.Product_Name</h3>
                                <p class="card-text">@item.Product_Description</p>
                                <div class="d-flex justify-content-between align-items-center">
                                    <div class="btn-group">
                                        <a asp-controller="Orders" asp-action="Details" asp-route-id="@item.Id" type="button" class="btn btn-sm btn-outline-secondary btn-dark text-center text-white ">Order</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
              </div>
  }           <br />
</main>        
            
               
           

